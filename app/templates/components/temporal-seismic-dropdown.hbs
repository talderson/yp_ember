<BsDropdown as |dd|>
  <dd.button>
    {{#if (is-equal @seismicType "1")}}
      Event
    {{else if (is-equal @seismicType "2")}}
      Blast
    {{else if (is-equal @seismicType "3")}}
      Noise
    {{else if (is-equal @seismicType "4")}}
      Other
    {{else}}
      All
    {{/if}}
    <span class="caret"></span>
  </dd.button>
  <dd.menu as |ddm|>
      <ddm.item>
        {{#link-to 'temporal-graphs.temporal-graph' instrumentId modelName (query-params seismic_type=null) class="dropdown-item"}}All{{/link-to}}
      </ddm.item>
      <ddm.item>
        {{#link-to 'temporal-graphs.temporal-graph' instrumentId modelName (query-params seismic_type=1) class="dropdown-item"}}Event{{/link-to}}
      </ddm.item>
      <ddm.item>
        {{#link-to 'temporal-graphs.temporal-graph' instrumentId modelName (query-params seismic_type=2) class="dropdown-item"}}Blast{{/link-to}}
      </ddm.item>
      <ddm.item>
        {{#link-to 'temporal-graphs.temporal-graph' instrumentId modelName (query-params seismic_type=3) class="dropdown-item"}}Noise{{/link-to}}
      </ddm.item>
      <ddm.item>
        {{#link-to 'temporal-graphs.temporal-graph' instrumentId modelName (query-params seismic_type=4) class="dropdown-item"}}Other{{/link-to}}
      </ddm.item>
  </dd.menu>
</BsDropdown>